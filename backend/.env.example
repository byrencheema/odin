# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=odin

# OpenSky Network OAuth (for real aircraft data)
# Sign up at https://opensky-network.org/
# Get credentials at https://opensky-network.org/my-opensky
OPENSKY_CLIENT_ID=your_opensky_client_id
OPENSKY_CLIENT_SECRET=your_opensky_client_secret

# Simulation Mode (set to true if you don't have OpenSky credentials)
ENABLE_SIMULATION=false
SIMULATION_AIRCRAFT_COUNT=15

# Weather API (for airport weather data)
# Sign up at https://www.weatherapi.com/signup.aspx
WEATHERAPI_KEY=your_weatherapi_key

# OpenRouter API (for AI chat - optional)
# Sign up at https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_TIMEOUT_SECONDS=15
CHAT_STREAMING_ENABLED=true
